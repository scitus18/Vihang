<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Main Body Properties -->
  <xacro:property name="body_radius" value="0.35"/>
  <xacro:property name="body_length" value="0.05"/>
  <xacro:property name="body_mass" value="2.0"/>
  <xacro:property name="body_ixx" value="0.1"/>
  <xacro:property name="body_iyy" value="0.1"/>
  <xacro:property name="body_izz" value="0.05"/>

  <!-- Wing Properties -->
  <xacro:property name="wing_length" value="0.6"/>
  <xacro:property name="wing_width" value="0.1"/>
  <xacro:property name="wing_height" value="0.02"/>
  <xacro:property name="wing_mass" value="0.5"/>
  <xacro:property name="wing_offset_y" value="0.35"/>
  <xacro:property name="wing_ixx" value="0.01"/>
  <xacro:property name="wing_iyy" value="0.05"/>
  <xacro:property name="wing_izz" value="0.05"/>

  <!-- Motor Properties -->
  <xacro:property name="motor_width" value="0.08"/>
  <xacro:property name="motor_depth" value="0.08"/>
  <xacro:property name="motor_height" value="0.1"/>
  <xacro:property name="motor_mass" value="0.3"/>
  <xacro:property name="motor_z_offset" value="0.06"/>
  <xacro:property name="motor_ixx" value="0.01"/>
  <xacro:property name="motor_iyy" value="0.01"/>
  <xacro:property name="motor_izz" value="0.01"/>

  <!-- Motor Positions -->
  <xacro:property name="front_motor_x" value="0.25"/>
  <xacro:property name="rear_motor_x" value="-0.25"/>

  <!-- Tilt Joint Properties -->
  <xacro:property name="tilt_limit_lower" value="-1.57"/>
  <xacro:property name="tilt_limit_upper" value="1.57"/>
  <xacro:property name="tilt_effort" value="10"/>
  <xacro:property name="tilt_velocity" value="2"/>

  <!-- Propeller Properties -->
  <xacro:property name="prop_radius" value="0.15"/>
  <xacro:property name="prop_thickness" value="0.005"/>
  <xacro:property name="prop_mass" value="0.05"/>
  <xacro:property name="prop_z_offset" value="0.08"/>
  <xacro:property name="prop_ixx" value="0.001"/>
  <xacro:property name="prop_iyy" value="0.001"/>
  <xacro:property name="prop_izz" value="0.001"/>

  <!-- Sensor Mounting Positions -->
  <xacro:property name="imu_x" value="0"/>
  <xacro:property name="imu_y" value="0"/>
  <xacro:property name="imu_z" value="0.03"/>

  <xacro:property name="gps_x" value="0"/>
  <xacro:property name="gps_y" value="0"/>
  <xacro:property name="gps_z" value="0.04"/>

  <!-- Material Definitions -->
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>
  
  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>
  
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

</robot>